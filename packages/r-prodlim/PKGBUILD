_cranname=prodlim
_cranver=2023.03.31
pkgname=r-${_cranname,,}
pkgver=${_cranver//[:-]/.}
pkgrel=1
pkgdesc="Product-Limit Estimation for Censored Event History Analysis"
arch=(i686 x86_64)
url="https://cran.r-project.org/package=${_cranname}"
license=(GPL2)
depends=('r>=2.9.0' 'r-rcpp>=0.11.5' r-lava r-data.table r-kernsmooth r-stats r-diagram r-survival r-graphics r-grdevices)
source=("https://cran.r-project.org/src/contrib/${_cranname}_${_cranver}.tar.gz")
sha256sums=('5510454f8511ca956666f27dfb77d875c56b9166188c33f22cd22b7615797800')

build() {
  R CMD INSTALL ${_cranname}_${_cranver}.tar.gz -l "${srcdir}"
}

package() {
  install -dm0755 "${pkgdir}/usr/lib/R/library"

  cp -a --no-preserve=ownership "${_cranname}" "${pkgdir}/usr/lib/R/library"
}
