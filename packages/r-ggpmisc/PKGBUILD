_cranname=ggpmisc
_cranver=0.5.3
pkgname=r-${_cranname,,}
pkgver=${_cranver//[:-]/.}
pkgrel=1
pkgdesc="Miscellaneous Extensions to 'ggplot2'"
arch=(any)
url="https://cran.r-project.org/package=${_cranname}"
license=(GPL2)
depends=('r>=4.0.0' 'r-ggpp>=0.4.5' 'r-ggplot2>=3.4.0' 'r-scales>=1.2.0' 'r-rlang>=1.0.0' 'r-generics>=0.1.2' 'r-confintr>=0.1.2' 'r-polynom>=1.4.0' 'r-quantreg>=5.93' 'r-lmodel2>=1.7.3' 'r-splus2r>=1.3.3' 'r-tibble>=3.1.5' 'r-plyr>=1.8.6' 'r-dplyr>=1.0.6' 'r-lubridate>=1.7.10' r-grid 'r-mass>=7.3.51.6' r-stats)
optdepends=(r-knitr r-rmarkdown r-ggrepel r-broom r-broom.mixed r-gginnards r-nlme r-testthat r-vdiffr)
source=("https://cran.r-project.org/src/contrib/${_cranname}_${_cranver}.tar.gz")
sha256sums=('aa986aaf23a0df0fcf8218b900b52f9824b6f2e19a49fd946389ee0ef725a0c8')

build() {
  R CMD INSTALL ${_cranname}_${_cranver}.tar.gz -l "${srcdir}"
}

package() {
  install -dm0755 "${pkgdir}/usr/lib/R/library"

  cp -a --no-preserve=ownership "${_cranname}" "${pkgdir}/usr/lib/R/library"
}
