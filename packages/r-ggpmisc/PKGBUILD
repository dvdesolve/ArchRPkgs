_cranname=ggpmisc
_cranver=0.5.0
pkgname=r-${_cranname,,}
pkgver=${_cranver//[:-]/.}
pkgrel=1
pkgdesc="Miscellaneous Extensions to 'ggplot2'"
arch=(any)
url="https://cran.r-project.org/package=${_cranname}"
license=(GPL2 GPL3)
depends=('r>=4.0.0' 'r-ggpp>=0.4.4' 'r-ggplot2>=3.3.5' 'r-scales>=1.2.0' 'r-rlang>=1.0.0' 'r-generics>=0.1.2' 'r-confintr>=0.1.2' 'r-polynom>=1.4.0' 'r-quantreg>=5.93' 'r-lmodel2>=1.7.3' 'r-splus2r>=1.3.3' 'r-tibble>=3.1.5' 'r-plyr>=1.8.6' 'r-dplyr>=1.0.6' 'r-lubridate>=1.7.10')
optdepends=(r-knitr r-rmarkdown r-ggrepel r-broom r-broom.mixed r-gginnards)
source=("https://cran.r-project.org/src/contrib/${_cranname}_${_cranver}.tar.gz")
sha256sums=('bcd3793f9f4c9ebdce10764224891acad91fff18d697fc818503c6576175ecc4')

build() {
  R CMD INSTALL ${_cranname}_${_cranver}.tar.gz -l "${srcdir}"
}

package() {
  install -dm0755 "${pkgdir}/usr/lib/R/library"

  cp -a --no-preserve=ownership "${_cranname}" "${pkgdir}/usr/lib/R/library"
}
