_cranname=StanHeaders
_cranver=2.26.27
pkgname=r-${_cranname,,}
pkgver=${_cranver//[:-]/.}
pkgrel=1
pkgdesc="C++ Header Files for Stan"
arch=(i686 x86_64)
url="https://cran.r-project.org/package=${_cranname}"
license=(BSD)
depends=('r>=3.4.0' 'r-rcppparallel>=5.1.4' r-rcppeigen pandoc)
optdepends=(r-rcpp r-bh r-knitr r-rmarkdown r-rstan r-matrix r-methods r-withr)
source=("https://cran.r-project.org/src/contrib/${_cranname}_${_cranver}.tar.gz")
sha256sums=('70e06546eadc448fc272d4b790620304d02a181df28cc924380bb5f10f83c9b1')

build() {
  R CMD INSTALL ${_cranname}_${_cranver}.tar.gz -l "${srcdir}"
}

package() {
  install -dm0755 "${pkgdir}/usr/lib/R/library"

  cp -a --no-preserve=ownership "${_cranname}" "${pkgdir}/usr/lib/R/library"
}
