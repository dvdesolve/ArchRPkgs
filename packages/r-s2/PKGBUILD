_cranname=s2
_cranver=1.1.4
pkgname=r-${_cranname,,}
pkgver=${_cranver//[:-]/.}
pkgrel=1
pkgdesc="Spherical Geometry Operators Using the S2 Geometry Library"
arch=(i686 x86_64)
url="https://cran.r-project.org/package=${_cranname}"
license=(Apache)
depends=('r>=3.0.0' r-rcpp 'r-wk>=0.6.0' 'openssl>=1.0.1')
optdepends=(r-testthat r-vctrs r-bit64)
source=("https://cran.r-project.org/src/contrib/${_cranname}_${_cranver}.tar.gz")
sha256sums=('be0b4925eaade52cf85b1cb6e851430bd4fe6ca30722dffcc3f9107e7a4e404c')

build() {
  R CMD INSTALL ${_cranname}_${_cranver}.tar.gz -l "${srcdir}"
}

package() {
  install -dm0755 "${pkgdir}/usr/lib/R/library"

  cp -a --no-preserve=ownership "${_cranname}" "${pkgdir}/usr/lib/R/library"
}

