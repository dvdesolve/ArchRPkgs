_cranname=distributional
_cranver=0.3.2
pkgname=r-${_cranname,,}
pkgver=${_cranver//[:-]/.}
pkgrel=1
pkgdesc="Vectorised Probability Distributions"
arch=(any)
url="https://cran.r-project.org/package=${_cranname}"
license=(GPL3)
depends=(r 'r-vctrs>=0.3.0' 'r-rlang>=0.4.5' r-generics r-numderiv r-ggplot2 r-scales r-farver r-digest r-lifecycle r-stats r-utils)
optdepends=(r-testthat r-covr r-mvtnorm r-actuar r-ggdist)
source=("https://cran.r-project.org/src/contrib/${_cranname}_${_cranver}.tar.gz")
sha256sums=('c883d633398233aee5a8ca6b587687f765bdfe0732a84e4961e7f71ac0d008f8')

build() {
  R CMD INSTALL ${_cranname}_${_cranver}.tar.gz -l "${srcdir}"
}

package() {
  install -dm0755 "${pkgdir}/usr/lib/R/library"

  cp -a --no-preserve=ownership "${_cranname}" "${pkgdir}/usr/lib/R/library"
}
