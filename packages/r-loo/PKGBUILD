# Contributor: Viktor Drobot (aka dviktor) linux776 [at] gmail [dot] com

_cranname=loo
_cranver=2.6.0
pkgname=r-${_cranname,,}
pkgver=${_cranver//[:-]/.}
pkgrel=1
pkgdesc="Efficient Leave-One-Out Cross-Validation and WAIC for Bayesian Models"
arch=(any)
url="https://cran.r-project.org/package=${_cranname}"
license=(GPL3)
depends=('r>=3.1.2' r-checkmate 'r-matrixstats>=0.52' r-stats r-parallel pandoc haskell-citeproc)
optdepends=(r-bayesplot r-brms r-ggplot2 r-knitr r-rmarkdown r-rstan r-rstanarm r-rstantools r-spdep r-testthat r-posterior r-graphics)
source=("https://cran.r-project.org/src/contrib/${_cranname}_${_cranver}.tar.gz")
sha256sums=('66da60fdf53a62cbc93797fa696a4cc43bce77f1721dd4bc1a58d25b3f981210')

build() {
  R CMD INSTALL ${_cranname}_${_cranver}.tar.gz -l "${srcdir}"
}

package() {
  install -dm0755 "${pkgdir}/usr/lib/R/library"

  cp -a --no-preserve=ownership "${_cranname}" "${pkgdir}/usr/lib/R/library"
}
