_bcname=TxDb.Hsapiens.UCSC.hg38.knownGene
_bcver=3.14.0
pkgname=r-${_bcname,,}
pkgver=${_bcver//[:-]/.}
pkgrel=1
pkgdesc="Annotation package for TxDb object(s)"
arch=(any)
url="https://bioconductor.org/packages/${_bcname}"
license=(Artistic2.0)
depends=(r 'r-genomicfeatures>=1.45.2' r-annotationdbi)
source=("https://bioconductor.org/packages/release/data/annotation/src/contrib/${_bcname}_${_bcver}.tar.gz")
sha256sums=('ccbcab4f4be41fda207ca5ee6505ba5320a97e103ef5d02eda962ac8783e7faa')

build() {
  R CMD INSTALL ${_bcname}_${_bcver}.tar.gz -l "${srcdir}"
}

package() {
  install -dm0755 "${pkgdir}/usr/lib/R/library"

  cp -a --no-preserve=ownership "${_bcname}" "${pkgdir}/usr/lib/R/library"
}
