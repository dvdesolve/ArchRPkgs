_cranname=maptools
_cranver=1.1-2
pkgname=r-${_cranname,,}
pkgver=${_cranver//[:-]/.}
pkgrel=1
pkgdesc="Tools for Handling Spatial Objects"
arch=(i686 x86_64)
url="https://cran.r-project.org/package=${_cranname}"
license=(GPL2 GPL3)
depends=('r>=2.10' 'r-sp>=1.0.11')
optdepends=(r-geos r-spatstat.geom r-pbsmapping r-maps r-rcolorbrewer r-raster r-polyclip r-spatstat.linnet r-spatstat.utils r-spatstat)
source=("https://cran.r-project.org/src/contrib/${_cranname}_${_cranver}.tar.gz")
sha256sums=('3995c96e8472cd6717fe3cbd3506358ff460b6c2cf92dbe4b00f75f507514439')

build() {
  R CMD INSTALL ${_cranname}_${_cranver}.tar.gz -l "${srcdir}"
}

package() {
  install -dm0755 "${pkgdir}/usr/lib/R/library"

  cp -a --no-preserve=ownership "${_cranname}" "${pkgdir}/usr/lib/R/library"
}
