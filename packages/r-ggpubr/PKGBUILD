_cranname=ggpubr
_cranver=0.5.0
pkgname=r-${_cranname,,}
pkgver=${_cranver//[:-]/.}
pkgrel=1
pkgdesc="'ggplot2' Based Publication Ready Plots"
arch=(any)
url="https://cran.r-project.org/package=${_cranname}"
license=(GPL2)
depends=('r>=3.1.0' 'r-ggplot2>=3.4.0' r-ggrepel r-ggsci r-tidyr r-purrr 'r-dplyr>=0.7.1' r-cowplot r-ggsignif r-scales r-gridextra r-glue r-polynom 'r-rlang>=0.4.6' 'r-rstatix>=0.7.1' r-tibble r-magrittr)
optdepends=(r-knitr r-rcolorbrewer r-gtable r-testthat)
source=("https://cran.r-project.org/src/contrib/${_cranname}_${_cranver}.tar.gz")
sha256sums=('fb21a091c7b866b2d35529ca218ce876051c31d3c9e4a68f3c6b297d591e7539')

build() {
  R CMD INSTALL ${_cranname}_${_cranver}.tar.gz -l "${srcdir}"
}

package() {
  install -dm0755 "${pkgdir}/usr/lib/R/library"

  cp -a --no-preserve=ownership "${_cranname}" "${pkgdir}/usr/lib/R/library"
}
