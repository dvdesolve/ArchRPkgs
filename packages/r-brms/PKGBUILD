_cranname=brms
_cranver=2.19.0
pkgname=r-${_cranname,,}
pkgver=${_cranver//[:-]/.}
pkgrel=1
pkgdesc="Bayesian Regression Models using 'Stan'"
arch=(any)
url="https://cran.r-project.org/package=${_cranname}"
license=(GPL2)
depends=('r>=3.5.0' 'r-rcpp>=0.12.0' 'r-rstan>=2.19.2' 'r-ggplot2>=2.0.0' 'r-loo>=2.3.1' 'r-posterior>=1.0.0' 'r-rstantools>=2.1.1' 'r-bayesplot>=1.5.0' 'r-shinystan>=2.4.0' 'r-bridgesampling>=0.3.0' 'r-glue>=1.3.0' 'r-future>=1.19.0' r-matrixstats r-nleqslv r-coda r-abind r-backports r-grdevices 'r-matrix>=1.1.1' r-nlme r-parallel 'r-rlang>=1.0.0' r-stats r-utils)
optdepends=(r-testthat r-emmeans r-projpred r-rwiener r-rtdists r-extradistr r-processx r-mice r-spdep r-mnormt r-lme4 r-mcmcglmm r-splines2 r-ape r-arm r-statmod r-digest r-diffobj r-r.rsp r-gtable r-shiny r-knitr r-rmarkdown r-cmdstanr)
source=("https://cran.r-project.org/src/contrib/${_cranname}_${_cranver}.tar.gz")
sha256sums=('0e146842c7acfcc6b8273df536eabb5279fb3bf2ae27ce1696f7d838d94fe5c1')

build() {
  R CMD INSTALL ${_cranname}_${_cranver}.tar.gz -l "${srcdir}"
}

package() {
  install -dm0755 "${pkgdir}/usr/lib/R/library"

  cp -a --no-preserve=ownership "${_cranname}" "${pkgdir}/usr/lib/R/library"
}
