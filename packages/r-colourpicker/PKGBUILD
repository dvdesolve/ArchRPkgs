_cranname=colourpicker
_cranver=1.1.1
pkgname=r-${_cranname,,}
pkgver=${_cranver//[:-]/.}
pkgrel=1
pkgdesc="A Colour Picker Tool for Shiny and for Selecting Colours in Plots"
arch=(any)
url="https://cran.r-project.org/package=${_cranname}"
license=(MIT)
depends=('r>=3.1.0' r-ggplot2 r-htmltools 'r-htmlwidgets>=0.7' r-jsonlite 'r-miniui>=0.1.1' 'r-shiny>=0.11.1' 'r-shinyjs>=2.0.0')
optdepends=(r-knitr r-rmarkdown r-rstudioapi r-shinydisconnect)
source=("https://cran.r-project.org/src/contrib/${_cranname}_${_cranver}.tar.gz")
sha256sums=('a0d09982b048b143e2c3438ccec039dd20d6f892fa0dedc9fdcb0d40de883ce0')

build() {
  R CMD INSTALL ${_cranname}_${_cranver}.tar.gz -l "${srcdir}"
}

package() {
  install -dm0755 "${pkgdir}/usr/lib/R/library"

  cp -a --no-preserve=ownership "${_cranname}" "${pkgdir}/usr/lib/R/library"
}
