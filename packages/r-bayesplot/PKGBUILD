_cranname=bayesplot
_cranver=1.10.0
pkgname=r-${_cranname,,}
pkgver=${_cranver//[:-]/.}
pkgrel=2
pkgdesc="Plotting for Bayesian Models"
arch=(any)
url="https://cran.r-project.org/package=${_cranname}"
license=(GPL3)
depends=('r>=3.1.0' 'r-dplyr>=0.8.0' 'r-ggplot2>=3.0.0' r-ggridges r-glue r-posterior r-reshape2 'r-rlang>=0.3.0' 'r-tibble>=2.0.0' r-tidyselect r-stats r-utils pandoc haskell-citeproc)
optdepends=(r-ggfortify r-gridextra r-hexbin r-knitr r-loo r-rcolorbrewer r-rmarkdown r-rstan r-rstanarm r-rstantools r-scales r-shinystan r-testthat r-vdiffr r-survival)
source=("https://cran.r-project.org/src/contrib/${_cranname}_${_cranver}.tar.gz")
sha256sums=('bb4cb92b1ae4cf8ae5f4b5cb092aba34af3d820d137e1f2265cca8f3e85113ff')

build() {
  R CMD INSTALL ${_cranname}_${_cranver}.tar.gz -l "${srcdir}"
}

package() {
  install -dm0755 "${pkgdir}/usr/lib/R/library"

  cp -a --no-preserve=ownership "${_cranname}" "${pkgdir}/usr/lib/R/library"
}
