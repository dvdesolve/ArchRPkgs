# Contributor: Viktor Drobot (aka dviktor) linux776 [at] gmail [dot] com

_cranname=bigmemory
_cranver=4.5.36
pkgname=r-${_cranname,,}
pkgver=${_cranver//[:-]/.}
pkgrel=1
pkgdesc="Manage Massive Matrices with Shared Memory and Memory-Mapped Files"
arch=(i686 x86_64)
url="https://cran.r-project.org/package=${_cranname}"
license=(LGPL3 Apache2.0)
depends=(r r-rcpp r-bigmemory.sri r-bh)
optdepends=(r-testthat)
source=("https://cran.r-project.org/src/contrib/${_cranname}_${_cranver}.tar.gz")
sha256sums=('18c67fbe6344b2f8223456c4f19ceebcf6c1166255eab81311001fd67a45ef0e')

build() {
  R CMD INSTALL ${_cranname}_${_cranver}.tar.gz -l "${srcdir}"
}

package() {
  install -dm0755 "${pkgdir}/usr/lib/R/library"

  cp -a --no-preserve=ownership "${_cranname}" "${pkgdir}/usr/lib/R/library"
}
