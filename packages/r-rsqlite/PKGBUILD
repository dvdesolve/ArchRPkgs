_cranname=RSQLite
_cranver=2.2.20
pkgname=r-${_cranname,,}
pkgver=${_cranver//[:-]/.}
pkgrel=1
pkgdesc="SQLite Interface for R"
arch=(i686 x86_64)
url="https://cran.r-project.org/package=${_cranname}"
license=(LGPL2.1 LGPL3)
depends=('r>=3.1.0' r-bit64 'r-blob>=1.2.0' 'r-dbi>=1.1.0' r-memoise r-pkgconfig 'r-rcpp>=1.0.7' 'r-plogr>=0.2.0')
optdepends=(r-callr r-dbitest r-gert r-gh r-hms r-knitr r-magrittr r-rmarkdown r-rvest r-testthat r-withr r-xml2)
source=("https://cran.r-project.org/src/contrib/${_cranname}_${_cranver}.tar.gz")
sha256sums=('52b5d572dcecca59e4c06d3d3dfdf4159dae83e1d7d34bcf97958ee7c5cba7ce')

build() {
  R CMD INSTALL ${_cranname}_${_cranver}.tar.gz -l "${srcdir}"
}

package() {
  install -dm0755 "${pkgdir}/usr/lib/R/library"

  cp -a --no-preserve=ownership "${_cranname}" "${pkgdir}/usr/lib/R/library"
}
