# Contributor: Viktor Drobot (aka dviktor) linux776 [at] gmail [dot] com

_cranname=bio3d
_cranver=2.4-2
pkgname=r-${_cranname,,}
pkgver=${_cranver//[:-]/.}
pkgrel=1
pkgdesc="Biological Structure Analysis"
arch=(i686 x86_64)
url="https://cran.r-project.org/package=${_cranname}"
license=(GPL2 GPL3)
depends=('r>=3.1.0' r-rcpp)
optdepends=(r-xml r-rcurl r-ncdf4 r-igraph r-bigmemory r-knitr r-rmarkdown r-testthat r-httr r-msa r-biostrings)
source=("https://cran.r-project.org/src/contrib/${_cranname}_${_cranver}.tar.gz")
sha256sums=('91415766cda0f96557e6bc568dbce8d44254a9460f2e2d0beed0ce14ffad6ccb')

build() {
  R CMD INSTALL ${_cranname}_${_cranver}.tar.gz -l "${srcdir}"
}

package() {
  install -dm0755 "${pkgdir}/usr/lib/R/library"

  cp -a --no-preserve=ownership "${_cranname}" "${pkgdir}/usr/lib/R/library"
}
